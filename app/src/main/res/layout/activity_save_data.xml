<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".SaveDataActivity">

    <TextView
            android:id="@+id/txtUmpire"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Umpire/Scorer"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:textColor="@android:color/black"
    />

    <EditText
            android:id="@+id/etxtUmpire"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:singleLine="true"
            android:hint="Enter Umpire name"
    />
    <TextView
            android:id="@+id/txtTeamA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Team A"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:textColor="@android:color/black"
    />

    <EditText
            android:id="@+id/etxtTeamA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="Enter TeamA name"
            android:singleLine="true"
    />
    <TextView
            android:id="@+id/txtTeamB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Team B"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:textColor="@android:color/black"
    />

    <EditText
            android:id="@+id/etxtTeamB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="Enter TeamB name"
            android:singleLine="true"
    />
    <TextView
            android:id="@+id/txtmathchPlace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Match place"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:textColor="@android:color/black"
    />

    <EditText
            android:id="@+id/etxtMatchPlace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="Enter place of match"
            android:singleLine="true"
    />
    <TextView
            android:id="@+id/txtTossTeam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Toss winning team"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:textColor="@android:color/black"
    />

    <EditText
            android:id="@+id/etxtTossTeam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="Enter toss winning team"
            android:singleLine="true"
    />
    <TextView
            android:id="@+id/txtTossDecision"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Toss Decision"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:textColor="@android:color/black"
    />

    <EditText
            android:id="@+id/etxtTossDecision"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:singleLine="true"
            android:hint="Enter toss winning team decision"
    />
    <TextView
            android:id="@+id/txtOvers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Number of overs"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:textColor="@android:color/black"
    />

    <EditText
            android:id="@+id/etxtOvers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:singleLine="true"
            android:hint="Enter max overs per side"
    />

    <Button
            android:id="@+id/btnSaveData"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Save data"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:textAllCaps="false"
    />
